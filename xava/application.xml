<?xml version = "1.0" encoding = "ISO-8859-1"?><!DOCTYPE application SYSTEM "dtds/application.dtd"><application name="FullOptica"> 		<!-- 	A default module for each entity is assumed with the	controllers on <default-module/>	-->	<default-module>		  		<controller name="BasicBusiness"/>			</default-module>		<module name="FacturaVenta">		<env-var name="XAVA_SEARCH_ACTION" value="BasicBusiness.edit"/>    	<model name="FacturaVenta" />    	<controller name="BasicBusiness"/>    	<controller name="MovimientoTransaccional"/>    </module>        <module name="FacturaCompra">		<env-var name="XAVA_SEARCH_ACTION" value="BasicBusiness.edit"/>    	<model name="FacturaCompra" />    	<controller name="BasicBusiness"/>    	<controller name="MovimientoTransaccional"/>    </module>        <module name="RecetaMedica">		<env-var name="XAVA_SEARCH_ACTION" value="BasicBusiness.edit"/>    	<model name="RecetaMedica" />    	<controller name="BasicBusiness"/>    	<controller name="MovimientoTransaccional"/>    </module>	<!-- 	You can define additional modules, for example:	  	<module name="OnlyReadTeacher">		<model name="Teacher"/>		<controller name="Print"/>	</module>			-->	</application>